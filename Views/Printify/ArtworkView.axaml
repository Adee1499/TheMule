<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:TheMule.ViewModels.Printify"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="240"
             Width="200" Background="Transparent"
             x:Class="TheMule.Views.Printify.ArtworkView"
             x:DataType="vm:ArtworkViewModel">
  <StackPanel Spacing="5" Width="200">
    <StackPanel.ContextMenu>
      <ContextMenu>
        <MenuItem Header="Archive" Command="{Binding ArchiveCommand}"/>
      </ContextMenu>
    </StackPanel.ContextMenu>
    <Border CornerRadius="10" ClipToBounds="True"
            ToolTip.Tip="{Binding UploadTime}">
      <Panel Background="#23292F" Height="230">
        <Panel Background="Transparent" Height="200" VerticalAlignment="Top">
          <Border CornerRadius="5">
            <Image Width="170" Height="170" Stretch="Uniform" 
                   Margin="15" Source="{Binding PreviewImage}"/>
          </Border>
          <TextBlock Text="ARCHIVED" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="{StaticResource BarlowFont}"
                     FontSize="40" Foreground="Crimson" FontWeight="Bold" IsVisible="{Binding ArtworkArchived}">
            <TextBlock.RenderTransform>
              <RotateTransform Angle="-30" />
            </TextBlock.RenderTransform>
          </TextBlock>
          <Panel Height="170" IsVisible="{Binding PreviewImage, Converter={x:Static ObjectConverters.IsNull}}">
            <PathIcon Height="75" Width="75" Data="{StaticResource image_regular}" />
          </Panel>
        </Panel>
        <TextBlock HorizontalAlignment="Center" Text="{Binding FileName}" FontFamily="{StaticResource BarlowFont}"
                   VerticalAlignment="Bottom" Margin="10" FontSize="16" />
      </Panel>
    </Border>
  </StackPanel>
</UserControl>
