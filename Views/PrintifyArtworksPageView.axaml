<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:TheMule.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1120" d:DesignHeight="768"
             Width="1120" Height="768" Background="Transparent"
             x:Class="TheMule.Views.PrintifyArtworksPageView"
             x:DataType="vm:PrintifyArtworksPageViewModel">
  <UserControl.Styles>
    <Style Selector="ListBoxItem">
      <Setter Property="Margin" Value="25,25" />
    </Style>
    <Style Selector="ListBoxItem:pointerover">
    </Style>
  </UserControl.Styles>

  <DockPanel>
    <ListBox ItemsSource="{Binding PrintifyArtworks}" SelectedItem="{Binding SelectedArtwork}"
             Background="Transparent" Margin="10 20">
      <ListBox.ItemsPanel>
        <ItemsPanelTemplate>
          <WrapPanel />
        </ItemsPanelTemplate>
      </ListBox.ItemsPanel>
    </ListBox>
  </DockPanel>
</UserControl>