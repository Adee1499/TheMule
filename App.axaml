<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="TheMule.App"
             xmlns:local="using:TheMule"
             RequestedThemeVariant="Dark">

  <Application.DataTemplates>
    <local:ViewLocator/>
  </Application.DataTemplates>
  
  <Application.Styles>
    <FluentTheme />
    <StyleInclude Source="avares://TheMule/Icons.axaml" />
    <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
  </Application.Styles>

  <Application.Resources>
    <FontFamily x:Key="BarlowFont">avares://TheMule/Assets/Fonts#Barlow</FontFamily>
    <Color x:Key="SystemAccentColor">#c9bf5d</Color>
    <Color x:Key="SystemAccentColorDark1">#3640a2</Color>
    <Color x:Key="SystemAccentColorDark2">#3640a2</Color>
    <Color x:Key="SystemAccentColorDark3">#3640a2</Color>
    <Color x:Key="SystemAccentColorLight1">#c9bf5d</Color>
    <Color x:Key="SystemAccentColorLight2">#c9bf5d</Color>
    <Color x:Key="SystemAccentColorLight3">#c9bf5d</Color>
  </Application.Resources>
</Application>